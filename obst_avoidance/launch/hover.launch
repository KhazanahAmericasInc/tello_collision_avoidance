<launch>

    <!-- General Parameters -->
    <arg name="bag_path"      default="$(find obst_avoidance)/bag/" />

    <!-- Drone WiFi UDP -->
    <param name="drone_ip"	type="string"	value="192.168.0.1" />
    <param name="drone_port"	type="int"	value="8889" />

    <!-- Pi Bluetooth RFCOMM -->
    <param name="bt_port"	type="int"	value="3" />

    <node name="run_main" pkg="obst_avoidance" type="main_node.py" output="screen" />
    <node name="run_drone_node" pkg="obst_avoidance" type="drone_node.py" output="screen" />
    <node pkg="rosbag" type="record" name="record" args="-o $(arg bag_path) /cmd_vel /cmd_action /telemetry /sensor_meas" />

</launch>
